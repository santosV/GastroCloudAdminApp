<Page
    x:Class="GastroCloud.Views.Descuento.Index"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GastroCloud.Views.Descuento"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="15,0,15,10" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel x:ConnectionId='1' Margin="10,10,10,10" Grid.Row="0" Orientation="Horizontal"                                           >
            <TextBlock FontFamily="Segoe MDL2 Assets" Foreground="{ThemeResource InkToolbarAccentColorThemeBrush}" Margin="-10,3.5,0,0" Text="" />
            <TextBlock Margin="5,0,0,0" Foreground="{ThemeResource InkToolbarAccentColorThemeBrush}" Text="Crear"/>
        </StackPanel>


        <!--Buscador-->
        <StackPanel Grid.Row="1"  Orientation="Vertical" HorizontalAlignment="Stretch" Margin="0,0,0,10">
            <Border HorizontalAlignment="Stretch"  CornerRadius="8" BorderThickness="2" BorderBrush="#FFEAEAEA" Margin="0,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="10,-3,0,0" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center"  Visibility="Visible" Foreground="#FFDEDEDE" Text="" FontWeight="ExtraBold" FontSize="15"/>
                    <TextBox x:ConnectionId='3' Grid.Column="1" x:Name="txtBuscador" Background="Transparent" PlaceholderText="Buscar" Margin="0,5,0,0"  BorderThickness="0"  Foreground="#FF9B9B9B" FontFamily="Century Gothic" Height="Auto"/>
                </Grid>
            </Border>
        </StackPanel>

        <!--Lista-->
        <GridView x:ConnectionId='2'
            x:Name="gridDescuentos"
            AutomationProperties.AutomationId="ItemGridView"
            AutomationProperties.Name="Items In Group"
            TabIndex="1"
            Grid.RowSpan="2"
            Grid.Row="2"
            Padding="0,10,0,0"
            SelectionMode="None"
            IsSwipeEnabled="false" Background="{StaticResource FocusVisualWhiteStrokeThemeBrush}">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="140" Tag="{Binding id}" 
                          Padding="0" >

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border HorizontalAlignment="Stretch" CornerRadius="100"  BorderThickness="3" BorderBrush="{ThemeResource InkToolbarAccentColorThemeBrush}" Margin="0">
                                <Grid VerticalAlignment="Center">

                                    <Ellipse  Height="105" Width="105" Margin="0"  VerticalAlignment="Center">
                                        <Ellipse.Fill>
                                            <ImageBrush x:Name="imgAlmacen"  Stretch="UniformToFill" ImageSource="ms-appx:///Assets/discount-coupon-management.jpg" />
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Ellipse Height="105" Width="105" VerticalAlignment="Center" Fill="Black" Opacity="0.4"/>
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="36"  Foreground="White" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>

                                </Grid>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                <TextBlock Text="{Binding descuento}" Foreground="{StaticResource InkToolbarAccentColorThemeBrush}" FontFamily="Segoe UI" FontSize="20" FontWeight="Bold" TextWrapping="Wrap"/>
                                <TextBlock FontFamily="Segoe UI" FontWeight="ExtraLight" FontSize="15" Foreground="Gray" Text="{Binding tipo}"/>
                            </StackPanel>
                        </Grid>

                        <Border Margin="0,3,0,0" Grid.Row="1" Width="400" HorizontalAlignment="Stretch"  Height="1" BorderThickness="2" BorderBrush="#FFEAEAEA"/>


                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>



    </Grid>
</Page>

