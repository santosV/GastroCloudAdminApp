<Page
    x:Class="GastroCloud.Views.Grupos.IndexGroups"
  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GastroCloud.Views.Grupos"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--Recursos-->
    <Page.Resources>

        <ResourceDictionary >
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <CollectionViewSource x:ConnectionId='1'
            x:Name="itemsViewSource"
            Source="{Binding index}"/>
            
        </ResourceDictionary>
    </Page.Resources>
    <!--Terminan Recursos-->


    <Grid Background="{StaticResource FocusVisualWhiteStrokeThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <RadioButton x:ConnectionId='2' Grid.Row="0"  x:Name="btnCrear" Content="Crear" Tag="" Style="{StaticResource IconWithButton}" Margin="0,27,0,26" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
        </Grid>
        
        <GridView x:ConnectionId='3'
            x:Name="gridTemplate"
            AutomationProperties.AutomationId="ItemGridView"
            AutomationProperties.Name="Items In Group"
            TabIndex="1"
            Grid.RowSpan="2"
            Grid.Row="1"
    

            SelectionMode="None"
            IsSwipeEnabled="false" Background="{StaticResource FocusVisualWhiteStrokeThemeBrush}">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="110" Width="350" Margin="0,0,0,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="0,10,0,0" FontFamily="Segoe MDL2 Assets"  Visibility="Visible" Foreground="{StaticResource InkToolbarAccentColorThemeBrush}" Text="" FontSize="80"/>
                        <Image  Stretch="UniformToFill" Width="100" Height="100" AutomationProperties.Name="{Binding Title}" Visibility="Collapsed" Source="ms-appx:///Assets/images.jpg" />

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                            <TextBlock Text="Hamburguesas" Foreground="{StaticResource InkToolbarAccentColorThemeBrush}" Style="{StaticResource TitleTextBlockStyle}" TextWrapping="Wrap"/>
                            <TextBlock Text="grupo de productos" Style="{StaticResource BodyTextBlockStyle}" MaxHeight="60" Foreground="#555"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

